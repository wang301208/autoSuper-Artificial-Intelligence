# AutoGPT Environment Configuration Template
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION=your-openai-org-id-here

# Application Settings
LOG_LEVEL=INFO
WORKSPACE_PATH=workspace
AGENT_MODE=continuous

# Database Configuration
DATABASE_URL=sqlite:///autogpt.db

# Web Interface Settings
WEB_SERVER_PORT=8000
WEB_SERVER_HOST=localhost

# Security Settings
SECRET_KEY=your-secret-key-here

# Optional: Other AI Provider APIs
ANTHROPIC_API_KEY=your-anthropic-key-here
GOOGLE_API_KEY=your-google-key-here

# Optional: Vector Database
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_ENVIRONMENT=your-pinecone-env-here

# Optional: Memory Backend
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Development Settings
DEBUG=false
TESTING=false